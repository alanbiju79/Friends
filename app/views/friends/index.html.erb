<h1>Friends</h1>

<table class="table table-striped table-bordered table align-middle table-hover">
  <thead>
    <tr class="text-center table-dark">
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr class="clickable text-center">
          <td><%= friend.first_name %>
              <%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= link_to 'Show', friend, class:"btn btn-outline-secondary btn-sm" %></td>
          <td><%= link_to 'Delete', friend, class:"btn btn-outline-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-dark" %>
