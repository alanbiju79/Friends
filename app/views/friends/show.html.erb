<div class="card w-75 mx-auto text-center text-dark bg-light border-secondary">
  <div class="card-header">
    <h1 class="card-title"><%= @friend.first_name %>  <%= @friend.last_name %></h1>
  </div>
  <div class="card-body"> 
    <%= @friend.email %> | <%= @friend.phone %>
  </div>
  <div class="card-footer">
      <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-dark" %>
      <%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
    </div>
</div>


